<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/remark_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出:"/>
        <TextView
                android:id="@+id/money_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="225.0"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型:"/>
        <TextView
                android:id="@+id/type_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="衣服"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明细:"/>
        <TextView
                android:id="@+id/category_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自己穿"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记录时间:"/>
        <TextView
                android:id="@+id/date_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-04-13"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注:"/>
        <TextView
                android:id="@+id/note_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无备注"/>
    </LinearLayout>
</LinearLayout>